{
  "compilerOptions": {
    "target": "es5",
    "module": "commonJS",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "downlevelIteration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": [
      "src/types",
    ]
  },
  "include": [
    "__test__/**/*.ts",
    "./src/**/*.ts",
    "test.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "temp"
  ]
}