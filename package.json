{
  "name": "nodejs_mentoring_program",
  "version": "1.0.0",
  "description": "The bunch of tasks should be done in terms of the project as hometasks",
  "main": "index.ts",
  "scripts": {
    "postinstall": "npm run tsc && npm run babel:tsc",
    "tsc": "tsc",
    "babel:tsc": "babel  --extensions \".ts\" ./src --out-dir ./lib",
    "task1": "nodemon --config ./nodemon.dev.json ./src/utils/string.reverse.ts",
    "task2": "npm run task2:stream",
    "task2:stream": "nodemon --config ./nodemon.dev.json ./src/utils/csv.serve.stream.ts",
    "task2:no_stream": "nodemon --config ./nodemon.dev.json ./src/utils/csv.serve.no_stream.ts",
    "task3.1:babel": "nodemon ./lib/utils/string.reverse.js",
    "task3.2:babel": "nodemon ./lib/utils/csv.serve.js",
    "start:dev": "nodemon ./index.ts",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://git.epam.com/Dzmitry_Karneyenka/nodejs_mentoring_program.git"
  },
  "author": "Dzmitry_Karneyenka@epam.com",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.11",
    "csvtojson": "^2.0.10",
    "express": "^4.17.1",
    "ts-node": "^9.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/plugin-transform-typescript": "^7.13.0",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-typescript": "^7.13.0",
    "@types/node": "^14.14.32",
    "@types/uuid": "^8.3.0",
    "dotenv": "^8.2.0",
    "husky": "^5.1.3",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.2"
  }
}
